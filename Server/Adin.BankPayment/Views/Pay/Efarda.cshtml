@model Transaction
@{
    Layout = null;
}
<html>
<head>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
</head>
<body style="display:flex">

    <form method="post" action="@Model.Bank.PostUrl" id="frmSendToBank">
        <input type="hidden" name="username" value="@ViewBag.Username">
        <input type="hidden" name="traceNumber" value="@ViewBag.traceNumber">
    </form>

    <div style="margin: 0 auto; align-self: center;" class="alert alert-success movetopage">
        در حال انتقال به درگاه پرداخت ...
    </div>

    <script type="text/javascript">
        document.getElementById("frmSendToBank").submit();
    </script>

</body>
</html>